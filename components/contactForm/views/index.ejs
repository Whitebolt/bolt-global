<%- view("content/index", doc, req) %>

<% if (req.query.formSent) { %>
<p>
  <b>Thank You for getting in touch, Your email has been sent. We will contact You shortly.</b>
</p>  
<% } else { %>
<form method="post" action="/contactForm/save">
  <input type="hidden" name="path" value="<%= doc.path %>">
  <input type="text" name="subject" placeholder="Subject">
  <textarea name="message" placeholder="Your Message" rows="5"></textarea>
  <input type="text" name="name" placeholder="Your Name">
  <input type="email" name="email" placeholder="Email">
  <input type="text" name="phone" placeholder="Phone">
  <input type="submit" value="Send Message">
</form>
<% } %>